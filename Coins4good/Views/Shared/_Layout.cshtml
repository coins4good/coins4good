<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coins4Good</title>
    <meta name="description" content="The Crowdmining Platform (donate bitcoins for charity)">
    <meta name="keywords" content="bitocoin litecoin hashing cycles charity donate">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Add custom CSS here -->
    <link href="~/Content/modern-business.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet">


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Coins4Good", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "background: url(/Content/Images/beta.png) no-repeat left center !important;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Charities", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    @RenderBody()


    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Coins4Good </p>
                </div>

            </div>
        </footer>


        <!-- AddThis Button BEGIN -->
        <div class="addthis_toolbox addthis_floating_style addthis_counter_style" style="right:50px;top:50px;background-color: transparent;">
            <a class="addthis_button_facebook_like" addthis:url="http://www.coins4good.org" addthis:title="Coins4Good - The Crowdmining Platform (donate bitcoins for charity)" fb:like:layout="box_count"></a>
            <a class="addthis_button_tweet" addthis:url="http://www.coins4good.org" addthis:title="Coins4Good - The Crowdmining Platform (donate bitcoins for charity)" tw:count="vertical"></a>
            <a class="addthis_button_google_plusone" addthis:url="http://www.coins4good.org" addthis:title="Coins4Good - The Crowdmining Platform (donate bitcoins for charity)" g:plusone:size="tall"></a>
            <a class="addthis_counter" addthis:url="http://www.coins4good.org" addthis:title="Coins4Good - The Crowdmining Platform (donate bitcoins for charity)"></a>
        </div>
        <script type="text/javascript">
            var addthis_config = {
                data_track_address_bar: false,
                data_track_clickback: false
            };
        </script>
        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-533dfe8469064ee9"></script>
        <!-- AddThis Button END -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/modern-business.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
